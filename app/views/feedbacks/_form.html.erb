<%= form_with(model: feedback) do |form| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
        <% feedback.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field form-group">
    <%= form.label :Your_name %>
    <%= form.text_field :customer_name, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= form.label :Phone_number %>
    <%= form.text_field :phone_number, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :Name_of_gardener %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :rating %>
    <%=  form.select :rating, [['5','five'],['4','four'],['3','three'],['3','three'],['2','two'],['1','one']], class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= form.label :Additional_Comments %>
    <%= form.text_field :addtional_comments, class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
